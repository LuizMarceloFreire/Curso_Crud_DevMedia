@model Curso_Crud_DevMedia.Models.Cliente

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Consultor:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Consultor.Nome)
        </dd>

        <dt>
            Cliente:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            E-mail:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Telefone
        </dt>
        <dd>
            @foreach (var telefones in Model.Telefones)
            {
                <p>(@telefones.DDD) @telefones.Numero</p>
            }
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
